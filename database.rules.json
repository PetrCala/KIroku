{
  "rules": {
    "feedback": {
      ".read": "auth.token.admin === true",
      ".write": "auth != null"
    },
    "users": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$uid": {
          "friend_requests": {
            "$request_id": {
                ".validate": "newData.val() === null || (newData.isString() && (newData.val() === 'sent' || newData.val() === 'received'))",
                ".read": true,
                ".write": "root.child('users').child($uid).child('friend_requests').child($request_id) == $uid"
            }
          }
      }
    }
  }
}