{
  "rules": {
    "feedback": {
      ".read": "auth.token.admin === true",
      ".write": "auth != null"
    },
    "users": {
      "$uid": {
        "friends": {
          "$friend_uid": {
            ".validate": "newData.isBoolean()",
            ".read": "auth != null",
            ".write": "auth != null"
          }
        },
        "friend_requests": {
          ".read": "auth != null && $uid === auth.uid",
          "$request_id": {
            ".validate": "(($uid === auth.uid && newData.val() === 'sent') || ($request_id === auth.uid && newData.val() === 'received') || newData.val() === null) && ($uid != $request_id) && (newData.isString())",
            ".write": "auth != null"
          }
        }
      }
    }
  }
}