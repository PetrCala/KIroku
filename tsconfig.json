{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "composite": true,
    "noEmit":false,
    "declaration": true,
    "declarationMap": true,
    "rootDir": ".",
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@firebase/auth": ["./node_modules/@firebase/auth/dist/index.rn.d.ts"],
      "@database/*": ["./src/database/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": [
    "src/database/**/*",
    "src/utils/**/*",
    "src/types/**/*",
    // "src/**/*",
    // "**/*.ts",
    // "**/*.tsx",
    // "**/*.js",
    // "**/*.json",
    "package.json",
  ],
  "exclude": ["node_modules", "__tests__", "_dev", "android", "ios", "assets", "coverage", "docs", ".vscode"]
}
